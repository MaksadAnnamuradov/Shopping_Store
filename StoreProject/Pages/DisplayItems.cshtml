@page "Store"
@model StoreProject.Pages.DisplayItems

@{
    ViewData["Title"] = "Store";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body class="p-3 mb-2 bg-light text-dark">

    <h3>@Request.Cookies["UserName"]: Last Purchase on @Request.Cookies["PurchaseDate"] with Total Sum of @Request.Cookies["TotalSum"]</h3>

    <h1>Items</h1>

    <div class="container">
        <table border="1" class="table table-bordered table-hover table-dark">
            <thead class="table-success">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Item[0].Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <button class="btn btn-outline-primary bg-success"><a asp-page="./Cart" asp-page-handler="AddToCart" asp-route-id="@item.Id">Add to Cart</a></button>
                        </td>
              
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>